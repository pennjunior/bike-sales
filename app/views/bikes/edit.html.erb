<h2 class="form-title">Edit Bikes details</h2>

<%= simple_form_for @bike,
    local: true,
    data: { controller: "loading", action: "submit->loading#showSpinner" },
    html: { class: "custom-bike-form" } do |form| %>
  <div class="form-group">
    <%= form.input :model, placeholder: "Enter bike model", label: false %>
  </div>
  <div class="form-group">
    <%= form.input :kilometers, placeholder: "Enter kilometers traveled", label: false %>
  </div>
  <div class="form-group">
    <%= form.input :body, placeholder: "Enter purpose or type of bike", label: false %>
  </div>
  <div class="form-group">
    <%= form.input :colour, placeholder: "Enter color", label: false %>
  </div>
  <div class="form-group">
    <%= form.input :engine_capacity, placeholder: "Enter engine capacity in cc", label: false %>
  </div>
  <div class="form-group">
    <%= form.input :last_modified, as: :date, label: false, placeholder: "Select last modified date" %>
  </div>
  <div class="form-group">
    <%= form.input :registration_status, placeholder: "Enter registration status", label: false %>
  </div>
  <div class="form-group">
    <%= form.input :description, placeholder: "Enter a brief description", label: false %>
  </div>
  <div class="form-group">
    <%= form.input :features, placeholder: "List features separated by commas", label: false %>
  </div>
  <div class="form-group">
    <%= form.input :price, placeholder: "Enter price in currency", label: false %>
  </div>
  <div class="form-group">
    <%= form.input :stock, placeholder: "Enter stock count", label: false %>
  </div>
  <div class="form-group">
    <%= form.input :maximum_speed, placeholder: "Enter maximum speed in km/h", label: false %>
  </div>
  <div class="form-group">
    <%= form.input :fuel_type, placeholder: "Enter fuel type (e.g., petrol, electric)", label: false %>
  </div>
  <div class="form-group">
    <%= form.input :category_id, as: :select, collection: Category.all, prompt: "Select a Category", label: false %>
  </div>
  <div class="form-group">
    <%= form.input :brand_id, as: :select, collection: Brand.all, prompt: "Select a Brand", label: false %>
  </div>
  <div class="form-group">
    <%= form.input :photos, as: :file, input_html: { multiple: true }, label: false %>
  </div>
  <div class="form-group submit-button">
    <%= form.button :submit, "Save Bike Info" %>
  </div>
  <span class="loader text-center" data-loading-target="spinner" style="display: none;"></span>
<% end %>
