<div class="hero-about">
    <div class="hero-about-overlay"></div>
    <div class="hero-about-text">
      <h1>Contact Us</h1>
    </div>
  </div>

<div class="contact-form-container">
  <%= form_with(url: contact_path, method: :post, local: true, class: "contact-form") do |f| %>
    <div class="form-group">
      <%= f.label :name, "Your Name", class: "form-label" %>
      <%= f.text_field :name, class: "form-control", placeholder: "Enter your full name", required: true %>
    </div>

    <div class="form-group">
      <%= f.label :email, "Your Email", class: "form-label" %>
      <%= f.email_field :email, class: "form-control", placeholder: "Enter your email address", required: true %>
    </div>

    <div class="form-group">
      <%= f.label :subject, "Subject", class: "form-label" %>
      <%= f.text_field :subject, class: "form-control", placeholder: "Enter the subject", required: true %>
    </div>

    <div class="form-group">
      <%= f.label :message, "Message", class: "form-label" %>
      <%= f.text_area :message, class: "form-control", rows: 6, placeholder: "Write your message here...", required: true %>
    </div>

    <div class="form-group text-center">
      <%= f.submit "Send Message", class: "btn btn-primary" %>
    </div>
  <% end %>
</div>
